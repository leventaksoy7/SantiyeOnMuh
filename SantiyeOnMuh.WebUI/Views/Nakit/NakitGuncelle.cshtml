@model Nakit
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <form asp-controller="Nakit" asp-action="NakitGuncelle" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Tarih"></label>
            <div class="col-sm-5">
                <input asp-for="Tarih" class="form-control" value="@Model.Tarih.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Tarih"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Aciklama"></label>
            <div class="col-sm-5">
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="SirketId"></label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="SirketId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Sirket,"Id","Ad"))">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="CariHesapId"></label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="CariHesapId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Cari,"Id","Ad"))">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="BankaHesapId"></label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="BankaHesapId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Banka,"Id","HesapAdi"))">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Tutar"></label>
            <div class="col-sm-5">
                <input asp-for="Tutar" class="form-control" placeholder=@Model.Tutar type="number" min="1" step=".01" />
                <span asp-validation-for="Tutar"></span>
            </div>
        </div>
        <div class="form-group row">
            <button class="col-sm-offset-2 col-sm-5 btn btn-success" type="submit">GÜNCELLE</button>
        </div>
    </form>
</body>
</html>
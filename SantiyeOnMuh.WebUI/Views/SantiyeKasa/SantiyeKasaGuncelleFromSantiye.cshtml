@model SantiyeKasa
@{}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <form action="/SantiyeKasa/SantiyeKasaGuncelleFromSantiye" method="post">
        <input type="hidden" asp-for="Id" class="form-control" value="@Model.Id" />
        <input type="hidden" asp-for="Durum" class="form-control" value="@Model.Durum" />
        <input type="hidden" asp-for="SantiyeId" class="form-control" value="@ViewBag.SantiyeId" />
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Tarih"></label>
            <div class="col-sm-5">
                <input asp-for="Tarih" class="form-control" value="@Model.Tarih.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Tarih"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Aciklama"></label>
            <div class="col-sm-5">
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Kisi"></label>
            <div class="col-sm-5">
                <input asp-for="Kisi" class="form-control" />
                <span asp-validation-for="Kisi"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label asp-for="SantiyeGiderKalemiId"></label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="SantiyeGiderKalemiId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.GK,"Id","Ad"))">
                </select>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="No">@*FATURA/FİŞ NO-PLAKA:*@</label>
            <div class="col-sm-5">
                <input asp-for="No" class="form-control" />
                <span asp-validation-for="No"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Gider"></label>
            <div class="col-sm-5">
                <input asp-for="Gider" class="form-control" type="number" min="0" step=".01" />
                <span asp-validation-for="Gider"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="ImgUrl">IMG:</label>
            <div class="col-sm-5">
                <input asp-for="ImgUrl" class="form-control" />
                <span asp-validation-for="ImgUrl"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <button class="col-sm-offset-2 col-sm-5 btn btn-success" type="submit">GÜNCELLE</button>
        </div>
    </form>
</body>
</html>
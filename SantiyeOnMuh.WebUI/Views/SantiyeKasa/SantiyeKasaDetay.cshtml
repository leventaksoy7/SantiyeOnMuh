@model SantiyeKasa
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SantiyeKasaDetay</title>
</head>
<body>
    <div>
        <br />
        <div>
            <a asp-controller="SantiyeKasa"
               asp-action="SantiyeKasa"
               asp-route-santiyeid="@Model.SantiyeId"
               class="btn btn-primary btn-sm">GERİ GEL</a>
        </div>
        <br />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-md-4">
                <table class="w3-table w3-striped w3-white">
                    <!--DÖNGÜ İÇİNDE FATURA BİLGİLERİ-->
                    <tr><th>TARİH</th><td>@Model.Tarih.ToString("dd/MM/yyyy")</td></tr>
                    <tr><th>AÇIKLAMA</th><td>@Model.Aciklama</td></tr>
                    <tr><th>KİŞİ</th><td>@Model.Kisi</td></tr>
                    <tr><th>NO</th><td>@Model.No</td></tr>
                    <tr><th>TUTAR</th><td>@Model.Gider</td></tr>
                    <tr><th>SİSTEME GİRİŞ</th><td>@Model.SistemeGiris.ToString("dd/MM/yyyy")</td></tr>
                    <tr><th>SON GÜNCELLEME</th><td>@Model.SonGuncelleme.ToString("dd/MM/yyyy")</td></tr>
                </table>
            </div>
            <div class="col-xl-6 col-md-4">
                <div class="card-body">
                    <img style='height: 100%; width: 100%; object-fit: contain' src="~/SantiyeKasaResim/@Model.ImgUrl" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>

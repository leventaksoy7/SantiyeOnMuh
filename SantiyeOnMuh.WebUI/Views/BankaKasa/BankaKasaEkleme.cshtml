@model BankaKasa
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <form asp-controller="BankaKasa" asp-action="BankaKasaEkleme" method="post" enctype="multipart/form-data">
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Tarih"></label>
            <div class="col-sm-2">
                <input asp-for="Tarih" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Tarih"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Aciklama"></label>
            <div class="col-sm-5">
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Nitelik"></label>
            <div class="col-sm-5">
                <input asp-for="Nitelik" class="form-control" />
                <span asp-validation-for="Nitelik"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="BankaHesapId"></label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="BankaHesapId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.bankahesap,"Id","HesapAdi"))">
                </select>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Giren"></label>
            <div class="col-sm-5">
                <input asp-for="Giren" class="form-control" value="0" type="number" min="0" step=".01" />
                <span asp-validation-for="Giren"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Cikan"></label>
            <div class="col-sm-5">
                <input asp-for="Cikan" class="form-control" value="0" type="number" min="0" step=".01" />
                <span asp-validation-for="Cikan"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <button class="col-sm-offset-2 col-sm-5 btn btn-success">EKLE</button>
        </div>
    </form>
</body>
</html>

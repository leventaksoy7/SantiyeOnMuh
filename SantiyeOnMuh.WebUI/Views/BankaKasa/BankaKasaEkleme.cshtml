@model BankaKasa
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <form asp-controller="BankaKasa" asp-action="BankaKasaEkleme" method="post" enctype="multipart/form-data">
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Tarih">TARİH:</label></div>
            <div class="col-sm-2"><input asp-for="Tarih" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" /></div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Aciklama">AÇIKLAMA:</label></div>
            <div class="col-sm-10"><input asp-for="Aciklama" class="form-control" /></div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Nitelik">NİTELİK:</label></div>
            <div class="col-sm-4"><input asp-for="Nitelik" class="form-control" /></div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="BankaHesapId">HESAP ADI:</label></div>
            <div class="col-sm-2">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="BankaHesapId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.bankahesap,"Id","Ad"))">
                </select>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Giren">GİREN TUTAR:</label></div>
            <div class="col-sm-2"><input asp-for="Giren" class="form-control" value="0" /></div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Giren">ÇIKAN TUTAR:</label></div>
            <div class="col-sm-2"><input asp-for="Cikan" class="form-control" value="0" /></div>
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-success">EKLE</button>
    </form>
</body>
</html>

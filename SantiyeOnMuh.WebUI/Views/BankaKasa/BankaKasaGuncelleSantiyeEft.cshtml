@model BankaKasaEftSantiyeModel
@{}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <form asp-controller="BankaKasa" asp-action="BankaKasaGuncelleSantiyeEft" method="post" enctype="multipart/form-data">
        <br />
        <input type="hidden" name="BankaKasaId" value="@Model.BankaKasaId" />
        <input type="hidden" name="SantiyeKasaId" value="@Model.SantiyeKasaId" />
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="SantiyeId"></label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="SantiyeId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Santiye,"Id","Ad"))">
                </select>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="BankaHesapId"></label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="BankaHesapId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.BankaHesap,"Id","HesapAdi"))">
                </select>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Tarih"></label>
            <div class="col-sm-5">
                <input asp-for="Tarih" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Tarih"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Aciklama"></label>
            <div class="col-sm-5">
                <input asp-for="Aciklama" value="@Model.Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" for="Tutar"></label>
            <div class="col-sm-5">
                <input asp-for="Tutar" value="@Model.Tutar" class="form-control" type="number" min="0" step=".01" />
                <span asp-validation-for="Tutar"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <button class="col-sm-offset-2 col-sm-5 btn btn-success" type="submit">GÜNCELLE</button>
        </div>
    </form>
</body>
</html>
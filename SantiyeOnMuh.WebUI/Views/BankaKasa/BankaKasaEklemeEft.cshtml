@model BankaKasaEftModel
@{}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <form asp-controller="BankaKasa" asp-action="BankaKasaEklemeEFT" method="post" enctype="multipart/form-data">
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Tarih"></label>
            <div class="col-sm-5">
                <input asp-for="Tarih" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Tarih"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
           <label class="col-sm-2" asp-for="Aciklama"></label>
            <div class="col-sm-5">
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="GonderenBanka">@*GÖNDEREN HESAP:*@</label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="GonderenBanka"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.bankahesap,"Id","HesapAdi"))">
                </select>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="AliciBanka">@*ALICI HESAP:*@</label>
            <div class="col-sm-5">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="AliciBanka"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.bankahesap,"Id","HesapAdi"))">
                </select>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2" asp-for="Tutar">@*GÖNDERİLECEK TUTAR:*@</label>
            <div class="col-sm-5">
                <input asp-for="Tutar" value="0" class="form-control" type="number" min="0" step=".01" />
                <span asp-validation-for="Tutar"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <button class="col-sm-offset-2 col-sm-5 btn btn-success" type="submit">GÖNDER</button>
        </div>
    </form>
</body>
</html>

@model BankaKasaEftModel
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <form asp-controller="BankaKasa" asp-action="BankaKasaEklemeEFT" method="post" enctype="multipart/form-data">
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Tarih">TARİH:</label></div>
            <div class="col-sm-2"><input asp-for="Tarih" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" /></div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Aciklama">AÇIKLAMA:</label></div>
            <div class="col-sm-10"><input asp-for="Aciklama" class="form-control" /></div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="GonderenBanka">GÖNDEREN HESAP:</label></div>
            <div class="col-sm-2">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="GonderenBanka"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.bankahesap,"Id","Ad"))">
                </select>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="AliciBanka">ALICI HESAP:</label></div>
            <div class="col-sm-2">
                <div asp-validation-summary="ModelOnly"></div>
                <select asp-for="AliciBanka"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.bankahesap,"Id","Ad"))">
                </select>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-sm-2"><label for="Tutar">GÖNDERİLECEK TUTAR:</label></div>
            <div class="col-sm-2"><input asp-for="Tutar" value="0" class="form-control" /></div>
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-success">GÖNDER</button>
    </form>
</body>
</html>

@model IEnumerable<User>
@{ }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<br />
<div>
    <a asp-controller="Account" asp-action="Register" class="btn btn-dark btn-sm">KULLANICI EKLE</a>
    <a asp-controller="Admin" asp-action="RoleCreate" class="btn btn-dark btn-sm">ROL EKLE</a>
    <a asp-controller="Admin" asp-action="RoleList" class="btn btn-dark btn-sm">ROL LİSTESİ</a>
</div>
<br />
<body style="background-color:burlywood">
    <div style="background-color:aliceblue" class="col col-md-12">
        <table class="table table-bordered">
            <tr>
                <th style="width:20%; vertical-align:middle">AD</th>
                <th style="width:20%; vertical-align:middle">SOYAD</th>
                <th style="width:20%; vertical-align:middle">KULLANICI ADI</th>
                <th style="width:20%; vertical-align:middle">ŞANTİYE</th>
                <th style="width:20%; vertical-align:middle">SİL</th>

            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td style="width:20%; vertical-align:middle">@user.Ad</td>
                    <td style="width:20%; vertical-align:middle">@user.SoyAd</td>
                    <td style="width:20%; vertical-align:middle">@user.UserName</td>

                    <td style="width:5%; vertical-align:middle">
                        <a asp-controller="Account" asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-danger btn-sm">ŞANTİYE ATA</a>
                    </td>

                    <td style="width:5%; vertical-align:middle">
                        <a asp-controller="Account" asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-danger btn-sm">KULLANICI SİL</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
